/**
 * int32 -> Uint8Array
 * 
 * @param value
 * @returns {Uint8Array}
 */
function intTobytes(value) {
	var a = new Uint8Array(4)
	a[3] = (value >> 24) & 0xFF
	a[2] = (value >> 16) & 0xFF
	a[1] = (value >> 8) & 0xFF
	a[0] = value & 0xFF
	return a;
}

function bytesToInt(value) {
	var a = new Uint32Array(1)
	a[0] = (value[3] & 0xFF) << 24
	a[0] = a[0] | ((value[2] & 0xFF) << 16)
	a[0] = a[0] | ((value[1] & 0xFF) << 8)
	a[0] = a[0] | (value[0] & 0xFF)

	return a
}
